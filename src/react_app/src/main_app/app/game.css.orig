* {
  box-sizing: border-box;
}
body {
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 0;
}

.grid {
  display: inline-flex;
  flex-direction: column;
  border-top: 1px solid black;
  border-left: 1px solid black;
}

.row {
  display: flex;
}

.cell {
  width: 10px;
  height: 10px;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
}
.cell.alive {
  background-color: #4682B4;
}
.cell.dead {
  background-color: #E8E8E8;
}

.info {
  padding: 40px;
  width: 100%;
  display: flex;
  min-height: 375px;
  justify-content: space-between;
}

.config {
  margin-right: 20px;
}

form label,
form input {
  display: block;
}

table {
  border-collapse: collapse;
}
th,
td {
  padding: 8px;
  min-width: 40px;
  text-align: center;
}
